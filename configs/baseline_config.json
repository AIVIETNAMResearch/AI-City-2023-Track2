{
    "general_config": {
        "data_dir": "./data/AIC23_Track2_NL_Retrieval/data",
        "max_len": 64,
        "train_batch_size": 16,
        "valid_batch_size": 16,
        "n_workers": 8,
        "kfolds": 5,
        "gradient_checkpointing": true,
        "epochs": 50,
        "n_warmup_steps": 0,
        "gradient_accumulation_steps": 1,
        "unscale": true,
        "evaluate_n_times_per_epoch": 1,
        "max_grad_norm": 1000,
        "train_print_frequency": 20,
        "valid_print_frequency": 20,
        "loss": "InfoNCE",
        "load_checkpoint": null
    },
    "optimizer": {
        "weight_decay": 5e-5,
        "learning_rate": 0.00003,
        "eps": 1e-8,
        "betas": [0.9, 0.999]
    },
    "scheduler": {
        "scheduler_type": "linear_warmup_cosine_annealing_lr",
        "batch_scheduler": true,
        "constant_schedule_with_warmup": { "n_warmup_steps": 0 },
        "linear_schedule_with_warmup": { "n_warmup_steps": 0 },
        "cosine_schedule_with_warmup": { "n_cycles": 0.5, "n_warmup_steps": 0 },
        "polynomial_decay_schedule_with_warmup": {
            "n_warmup_steps": 0,
            "power": 1.0,
            "min_lr": 0.0
        },
        "linear_warmup_cosine_annealing_lr": {
            "warmup_epochs": 0,
            "max_epochs": 20
        }
    },
    "arch": {
        "base_settings": {
            "video_params": {
                "model": "SpaceTimeTransformer",
                "arch_config": "base_patch16_224",
                "num_frames": 4,
                "pretrained": true,
                "time_init": "zeros",
                "input_res": 224,
                "color_classes": 8,
                "type_classes": 6,
                "motion_classes": 4
            },
            "text_params": {
                "model": "distilbert-base-uncased",
                "pretrained": true,
                "input": "text"
            },
            "projection": "minimal",
            "load_checkpoint": "./checkpoint/archive/cc-webvid2m-4f_stformer_b_16_224.pth.tar"
        },
        "text_head_setting": {
            "type": "ContextualizedWeightedHead",
            "args": {
                "d_model": 256,
                "nhead": 8,
                "num_layers": 2,
                "fc_dim_list": [256, 512, 1]
            }
        },
        "vision_head_setting": {
            "motion_encoder": "vgg16",
            "motion_line_encoder": "vgg16",
            "type": "ContextualizedWeightedHead",
            "args": {
                "d_model": 256,
                "nhead": 8,
                "num_layers": 2,
                "fc_dim_list": [256, 512, 1]
            }
        }
    }
}
